{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "tslint-language-service",
        "alwaysShowRuleFailuresAsWarnings": true,
        "configFile": "${workspaceRoot}/tslint.json",
        "exclude": "${workspaceRoot}/node_modules/*",
        "autoFixOnSave": true
      }
    ]
  },
  "exclude": [
    ".vscode",
    "logs",
    "node_modules"
  ]
}